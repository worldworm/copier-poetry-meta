stages:
  - test
  - build
  - publish

pylint:
  stage: test
  image: python:3.10
  only:
    changes:
      - .gitlab-ci.yml
      - [[ subdir_name ~ "/" if use_subdir else "" ]].pylintrc
      - "**/*.py"
  # tags:
  #   - docker
  script:
    [% if use_subdir -%]
    - cd [[ subdir_name ]]
    [% endif -%]
    - pip3 install poetry
    - poetry config virtualenvs.create false
    - poetry install --no-root --no-interaction --no-ansi
    - pylint --rcfile=[[ subdir_name ~ "/" if use_subdir else "" ]].pylintrc $(git ls-files '*.py')

pytest:
  stage: test
  image: python:${PY_VERSION}
  parallel:
    matrix:
      - PY_VERSION: ["3.11", "3.10", "3.9", "3.8"]
  only:
    changes:
      - .gitlab-ci.yml
      - pyproject.toml
      - poetry.lock
      - "**/*.py"
  # tags:
  #   - docker
  script:
    [% if use_subdir -%]
    - cd [[ subdir_name ]]
    [% endif -%]
    - pip3 install poetry
    - poetry config virtualenvs.create false
    - poetry install --no-root --no-interaction --no-ansi
    - pytest --cov={{package_import_name}} --cov-report term --cov-report xml:coverage.xml
  coverage: '/(?i)total.*? (100(?:\.0+)?\%|[1-9]?\d(?:\.\d+)?\%)$/'
  artifacts:
    reports:
      coverage_report:
        coverage_format: cobertura
        path: coverage.xml

{% if use_docker -%}
variables:
  DOCKER_REGISTRY_LOGIN: docker login -u $DOCKER_REGISTRY_USER -p $DOCKER_REGISTRY_PASSWORD $DOCKER_REGISTRY
  DOCKER_REGISTRY_LOGOUT: docker logout $DOCKER_REGISTRY
  DOCKER_IMAGE_NAME: $DOCKER_REGISTRY/$DOCKER_NAMESPACE/$CI_PROJECT_NAME

.docker-build: &docker-build
  - $DOCKER_REGISTRY_LOGIN
  [% if use_subdir -%]
  - cd $DOCKER_IMAGE_SUFFIX
  [% endif -%]
  - docker build --pull --tag $DOCKER_IMAGE_NAME[[ "-$DOCKER_IMAGE_SUFFIX" if use_subdir else "" ]]:$CI_COMMIT_SHA .
  - docker push $DOCKER_IMAGE_NAME[[ "-$DOCKER_IMAGE_SUFFIX" if use_subdir else "" ]]:$CI_COMMIT_SHA
  - $DOCKER_REGISTRY_LOGOUT

.docker-publish: &docker-publish
  - $DOCKER_REGISTRY_LOGIN
  - docker pull $DOCKER_IMAGE_NAME[[ "-$DOCKER_IMAGE_SUFFIX" if use_subdir else "" ]]:$CI_COMMIT_SHA
  - docker tag $DOCKER_IMAGE_NAME[[ "-$DOCKER_IMAGE_SUFFIX" if use_subdir else "" ]]:$CI_COMMIT_SHA $DOCKER_IMAGE_NAME[[ "-$DOCKER_IMAGE_SUFFIX" if use_subdir else "" ]]:$DOCKER_TAG
  - docker push $DOCKER_IMAGE_NAME[[ "-$DOCKER_IMAGE_SUFFIX" if use_subdir else "" ]]:$DOCKER_TAG
  - $DOCKER_REGISTRY_LOGOUT

build-docker[[ "-" ~ subdir_name if use_subdir else "" ]]:
  stage: build
  image: docker:dind
  [% if use_subdir -%]
  variables:
    DOCKER_IMAGE_SUFFIX: [[ subdir_name ]]
  [% endif -%]
  # tags:
  #   - docker
  script:
    - *docker-build
  except:
    - tags

publish-docker[[ "-" ~ subdir_name if use_subdir else "" ]]-edge:
  stage: publish
  image: docker:dind
  variables:
    GIT_STRATEGY: none
    DOCKER_TAG: edge
    [% if use_subdir -%]
    DOCKER_IMAGE_SUFFIX: [[ subdir_name ]]
    [% endif -%]
  # tags:
  #   - docker
  script:
    - *docker-publish
  only:
    - main

publish-docker[[ "-" ~ subdir_name if use_subdir else "" ]]-release:
  stage: publish
  image: docker:dind
  variables:
    GIT_STRATEGY: none
    DOCKER_TAG: $CI_COMMIT_TAG
    [% if use_subdir -%]
    DOCKER_IMAGE_SUFFIX: [[ subdir_name ]]
    [% endif -%]
  # tags:
  #   - docker
  script:
    - *docker-publish
  only:
    - tags

publish-docker[[ "-" ~ subdir_name if use_subdir else "" ]]-latest:
  stage: publish
  image: docker:dind
  variables:
    GIT_STRATEGY: none
    DOCKER_TAG: latest
    [% if use_subdir -%]
    DOCKER_IMAGE_SUFFIX: [[ subdir_name ]]
    [% endif -%]
  # tags:
  #   - docker
  script:
    - *docker-publish
  only:
    - tags
{% endif -%}
